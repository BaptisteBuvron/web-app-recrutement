
<%- include('../partials/adminHeader.ejs') %>.

<div class="container col-xxl-8 px-4 py-5">
  <div class="row">
    <div class="card shadow-sm">
      <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Image création d'entreprise</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em"></text></svg>
      <div class="card-body">
        <h4 class="mb-3">Offre</h4>
        <form class="needs-validation" novalidate="">
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="offerName" class="form-label">Nom de l'offre</label>
              <p><%= offer.ficheDePoste.typeMetier %></p>
            </div>

            <div class="col-md-5">
              <label for="entreprise" class="form-label">Entreprise</label>
              <p><%= offer.ficheDePoste.organisation.nom %></p>
            </div>

            <div class="col-md-4">
              <label for="state" class="form-label">Région</label>
              <p><%= offer.ficheDePoste.organisation.siege %></p>
            </div>

            <hr class="my-4">
            <div class="col-sm-6">
              <h4 class="mb-3">Pièces à déposer</h4>

              <% var list = offer.listePiece.split(',') %>
              <% list.forEach((element) => {%>
                    <p>•<%= element %></p>
              <% })%>

            </div>
          </div>

          <hr class="my-4">

          <h4 class="mb-3">Publication</h4>
          <p><%= offer.dateValidite %></p>

          <hr class="my-4">

          <h4 class="mb-3">Fiche de poste</h4>


          <div class="row g-3">
              <div class="col-sm-6">
                <label for="offerName" class="form-label">Responsable</label>
                <p><%= offer.ficheDePoste.typeMetier %></p>
              </div>

              <div class="col-md-5">
                <label for="entreprise" class="form-label">Lieu</label>
                <p><%= offer.ficheDePoste.organisation.nom %></p>
              </div>

              <div class="col-md-4">
                <label for="state" class="form-label">Télétravail</label>
                <p><%= offer.ficheDePoste.organisation.siege %></p>
              </div>

              <div class="col-md-4">
                 <label for="state" class="form-label">Heures</label>
                 <p><%= offer.ficheDePoste.organisation.siege %></p>
              </div>
              <div class="col-md-4">
                  <label for="state" class="form-label">Salaire</label>
                  <p><%= offer.ficheDePoste.organisation.siege %></p>
              </div>
            </div>

          <hr class="my-4">

        <div class="d-flex gap-2 justify-content-center py-2">
          <a href="/admin/offres"class="btn btn-primary">Retour</a>
          <a href="#" class="btn btn-warning">Modifier</a>
          <a href="#" class="btn btn-danger">Supprimer</a>
        </div>

        </form>
      </div>
    </div>
  </div>
</div>
</body>
</html>
