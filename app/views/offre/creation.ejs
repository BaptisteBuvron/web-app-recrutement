
<%- include('../partials/recruteurHeader.ejs') %>

<div class="container col-xxl-8 px-4 py-5">
    <div class="row">
        <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"
                 role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                <title>Image création d'entreprise</title>
                <rect width="100%" height="100%" fill="#55595c"></rect>
                <text x="50%" y="50%" fill="#eceeef" dy=".3em"></text>
            </svg>
            <div class="card-body">
                <h4 class="mb-3">OffreDePoste</h4>
                <form class="needs-validation" novalidate="" action="/offre/creation" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="row g-3">
                        <!-- Select fiche de poste from the ficheDePostes variables-->
                        <div>
                            <label for="ficheDePoste" class="form-label">Fiche de poste existante</label>
                            <select class="form-select" id="ficheDePoste" name="ficheDePoste" required>
                                <% ficheDePostes.forEach((fiche) => { %>
                                    <option value="<%= fiche.id %>"><%= fiche.id %> - <%= fiche.typeMetier %></option>
                                <% }) %>
                            </select>
                        </div>


                        <div class="col-sm-6">
                            <label for="etat" class="form-label">Etat de l'offre</label>
                            <select class="form-select" id="etat" name="etat">
                                <option value="non publiée">Non publiée</option>
                                <option value="publiée">Publiée</option>
                                <option value="expirée">Expirée</option>
                            </select>
                        </div>

                        <div class="col-md-5">
                            <label for="dateValidite" class="form-label">Date de validité</label>
                            <input type="date" class="form-control" id="dateValidite" name="dateValidite" placeholder=""
                                   required>
                        </div>

                        <hr class="my-4">
                        <div class="col-sm-6">
                            <h4 class="mb-3">Pièces à déposer</h4>
                            <!-- First checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="cv" id="cv" name="cv" checked/>
                                <label class="form-check-label" for="cv">CV</label>
                            </div>

                            <!-- Second checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="motivation" id="motivation"
                                       name="motivation" checked/>
                                <label class="form-check-label" for="motivation">Lettre de motivation</label>
                            </div>

                            <!-- Third checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="portfolio" id="portfolio"
                                       name="portfolio"/>
                                <label class="form-check-label" for="portfolio">Portfolio</label>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <button class="w-100 btn btn-primary btn-lg" type="submit">Créer l'offre</button>
                </form>
            </div>
        </div>
    </div>
</div>
    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
</body>
</html>
